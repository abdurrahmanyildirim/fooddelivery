<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - FoodDelivery</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    FoodDelivery
                </a>
            </div>
        </div>
    </nav>
    <div class="container-fluid" style="padding-left:40px; padding-right:40px;">
        <div class="row" >
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4>Giriş Yap</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Kullanıcı adı: </label><br />
                            <input type="email" class="form-control" required placeholder="e-Posta adresiniz" />
                        </div>
                        <div class="form-group">
                            <label>Kullanıcı adı: </label><br />
                            <input type="password" class="form-control" required placeholder="e-Posta adresiniz" />
                        </div>
                        <input type="submit" class="form-control btn btn-success" value="Giriş Yap"/>

                    </div>
                </div>
            </div>
            <div class="content col-md-9">@RenderBody()</div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>