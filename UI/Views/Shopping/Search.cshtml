@model IEnumerable<FoodDelivery.Entities.Concrete.Menu>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Arama sonuçları</h4>
    </div>
    <div class="panel-body">
        @{
            if (Model.Count() > 0)
            {
                <table class="table table-hover" >
                    <thead>
                        <tr>
                            <th>Menü Adı</th>
                            <th>Açıklaması</th>
                            <th>Fiyatı</th>
                            <th>Şirket</th>
                            <th style="text-align:center">Sepet Ekle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MenuName</td>
                                    <td>@item.MenuDetail</td>
                                    <td>@string.Format("{0:C0}", item.Price)</td>
                                    <td>@item.Company.CompanyName</td>
                                    <td style="text-align:center;font-size:15pt;">
                                        <div class="btn btn-default" id="sepeteEkle" data-id="@item.ID">
                                            <span class="glyphicon glyphicon-plus" style="color:green">
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h4 class="text-center">Menü bulunamadı.</h4>
            }

        }

    </div>
</div>


