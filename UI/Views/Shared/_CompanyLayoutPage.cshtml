<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img class="logo" src="~/Images/fooddelivery.png" />
                </a>
            </div>
            <div class="collapse navbar-collapse navbar-right" id="navbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ana Sayfa", "Admin", "Company")</li>
                    <li>@Html.ActionLink("Menüler", "Menus", "Company")</li>
                    <li>@Html.ActionLink("Şubeler", "Branches", "Company")</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row" style="margin-top:80px;">

            @if (Request.Cookies["company"] != null)
            {
                <div class="col-md-3">
                    @{
                        Html.RenderAction("_companyPartial", "Company");
                    }
                </div>
            }
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-body">

                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scriptsCompany", false)
</body>

</html>
