<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - FoodDelivery</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img class="logo" src="~/Images/fooddelivery.png" />
                </a>
            </div>
            <div class="collapse navbar-collapse navbar-right" id="navbar">
                <ul class="nav navbar-nav">
                    <li><a href="~/Index">Ana Sayfa</a></li>
                    <li><a href="~/About">Hakkımızda</a></li>
                    <li><a href="~/Contact">Bize Ulaşın</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid" style="padding-left:40px; padding-right:40px;">
        <div class="row" style="margin-top:80px;">
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                @Html.Partial("_UserPanel")
                @RenderSection("reklamAlani",false)
            </div>

            <div class="content col-xs-12 col-sm-9 col-md-9 col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <div class="container" style="padding-bottom:30px;">
            <div class="row">
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3"><img src="~/Images/fooddelivery.png" alt="Food Delivery" /><br />Görüş, öneri ve tüm sorularınız için info@fooddelivery.com adresine eposta gönderebilirsiniz.</div>
                <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3" style="padding-top:35px;">
                    <h4><b>Kurumsal</b></h4><br />
                    Hakkımızda<br />
                    Kariyer   <br />
                    Bize Ulaşın<br />
                </div>
                <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3" style="padding-top:35px;">
                    <h4><b>Kullanıcılar İçin</b></h4><br />
                    Sıkça Sorulan Sorular<br />
                    Üyelik Sözleşmesi   <br />
                    Gizlilik Politikası<br />
                </div>
                <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3" style="padding-top:35px;">
                    <h4><b>Sosyal Medya</b></h4><br />
                    Facebook<br />
                    Twitter   <br />
                    Instagram<br />
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="padding-top:10px;">
                    <img src="~/Images/logo-band.png" alt="Ödeme Yöntemleri" />
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>